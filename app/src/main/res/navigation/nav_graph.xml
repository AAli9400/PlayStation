<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.a.ali.playstation.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_console"
            app:destination="@id/consoleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_Ip"
            app:destination="@id/IpFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectReportFragment"
        android:name="com.a.ali.playstation.ui.reports.SelectReportFragment"
        android:label="ReportsFragment"
        tools:layout="@layout/fragment_select_report" />
    <fragment
        android:id="@+id/consoleFragment"
        android:name="com.a.ali.playstation.ui.console.ConsoleFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_console" >
        <action
            android:id="@+id/action_console_to_selectReport"
            app:destination="@id/selectReportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_console_to_IP"
            app:destination="@id/IpFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/IpFragment"
        android:name="com.a.ali.playstation.ui.ip.IPFragment"
        android:label="fragment_ip"
        tools:layout="@layout/fragment_ip" />
</navigation>